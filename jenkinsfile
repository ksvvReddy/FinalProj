pipeline{

    agent any

    stages{

        stage('Build Jar'){
            steps{
                bat 'mvn clean package -DskipTests'
            }
        }

        stage('Build Image'){
            steps{
                bat 'docker build -t vardhanreddy071094/pracimage2  .'
            }
        }

        stage('Run Image'){
           
            steps{
                bat "docker run -e BROWSER=chrome -e HUB_HOST=192.168.56.1 -e TEST_SUITE=testng.xml  vardhanreddy071094/pracimage2"
            }
        
}
    }

    post {
        always {
         archiveArtifacts artifacts: 'screenshot/*.png', followSymlinks: false
        }
    }

}
